<nav class="navbar navbar-default" id="site_topmmenu" role="navigation">
  <div class="navbar-header">
    <button class="navbar-toggle" data-target="#bs-navbar-collapse-1" data-toggle="collapse" type="button">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to Helpdesk.site_address, main_app.root_path, :class=>'navbar-brand', :title => Helpdesk.site_address %>
    <%= link_to Helpdesk.helpdesk_name, root_path, :class=>'navbar-brand', :title => Helpdesk.helpdesk_name %>
  </div>
  <div class="collapse navbar-collapse in" id="bs-navbar-collapse-1">
    <ul class="nav navbar-nav">
      <%= menu_li t('helpdesk.tickets.title'),tickets_path if Helpdesk.menu_items.include?('tickets') %>
      <%= menu_li t('helpdesk.faqs.title'),faqs_path  if Helpdesk.menu_items.include?('faqs') %>
      <%= menu_li t('helpdesk.subscribers.title'),subscribers_path  if Helpdesk.menu_items.include?('subscribers') %>
    </ul>
    <% if Helpdesk.menu_items.include?('search') %>
      <form action="<%= search_faqs_url %>" class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input class="form-control" name="search" placeholder="<%= t('helpdesk.faqs.search_in_faqs') %>" type="text" value="<%= params[:search] %>"></input>
          <button class="btn btn-default" type="submit">
            <%= t('helpdesk.faqs.search') %>
          </button>
        </div>
      </form>
    <% end %>
    <ul class="nav navbar-nav navbar-right">
      <% if Helpdesk.menu_items.include?('user') %>
        <% if helpdesk_user %>
          <li class="dropdown user">
            <%= link_to helpdesk_user.send(Helpdesk.display_user.to_sym), "#",:class=>"dropdown-toggle",data:{toggle:"dropdown"} %>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Home',main_app.root_path %>
              </li>
              <li>
                <%= link_to t('users.sign_out'),main_app.destroy_user_session_path, :method => :delete, :class => 'icon exit blue' %>
              </li>
            </ul>
          </li>
        <% end %>
      <% end %>
      <% if Helpdesk.menu_items.include?('language') %>
        <li class="dropdown">
          <%= link_to t('helpdesk.lang'),"#",:class=>"dropdown-toggle",data:{toggle:"dropdown"} %>
          <ul class="dropdown-menu">
            <li>
              <%= link_to "English", params.merge({:locale => :en}) %>
            </li>
            <li>
              <%= link_to "Polski", params.merge({:locale => :pl}) %>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
